// Here you generate *JavaScript* that would be executed in the browser
function refreshForm(innerHTML) {
  const newReviewForm = document.querySelector('.comment_form');
  newReviewForm.innerHTML = innerHTML;
}

function addReview(reviewHTML) {
  const reviews = document.getElementById('commentslist');
  reviews.insertAdjacentHTML('afterbegin', reviewHTML);
}

<% if @comment.errors.any? %>
  refreshForm('<%= j render "decisions/form", decision: @decision, comment: @comment %>');
<% else %>
  addReview('<%= j render "decisions/comment", comment: @comment %>');
  refreshForm('<%= j render "decisions/form", decision: @decision, comment: Comment.new %>');
<% end %>
