<div class="container">
  <h1>Next decisions</h2>
    <hr>
  <div class="row">
    <% @future_decisions.each do |decision| %>
      <div class="col-xs-12 col-sm-6 col-md-4">

        <div class="card-decision">
          <%= link_to decision_path(decision) do %>
            <div class="card-decision-title" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= decision.photo.url %>');">

                <h2><%=decision.title %></h2>
            </div>
          <% end %>
          <div class="card-decision-infos">
            <div class="card-decision-infos-category">
              <p><%= decision.category %></p>
            </div>
            <div class="vote">
              <a href="#"><i class="far fa-check-circle"></i></a>
              <a href="#"><i class="far fa-times-circle"></i></a>
              <a href="#"><i class="far fa-question-circle"></i></a>
            </div>
            <div class="votes-infos">
              <h4 class="text-center"><%= decision.votes.count %> </h4>
              <p class="text-center">votes</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <hr>
</div>
