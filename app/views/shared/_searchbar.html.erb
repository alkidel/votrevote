<div class="search-control">
  <% if request.env['PATH_INFO'] == decisions_path %>
    <%= form_tag decisions_path, remote: true, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Recherche..."
      %>
    <% end %>
  <% else %>
    <%= form_tag former_path, remote: true, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Recherche..."
      %>
    <% end %>
  <% end %>
</div>
