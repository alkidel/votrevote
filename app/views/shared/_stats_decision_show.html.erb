<div class="extra-padding">

  <h4 class="text-center">Le conseil municipal et la population sont en
    <% if @decision.result == @public_result %>
      <strong>accord</strong>
    <% else %>
      <strong>désaccord</strong>
    <% end %>
    pour cette décision !
  </h4>
</div>


<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="stats-table">
      <div class="stats-column">
        <div ><i class="fas fa-landmark"></i></div>
        <div>
          <p><% if @decision.result == "accepted" %>
            <i class="fas fa-check"></i>
          <% elsif @decision.result == "rejected" %>
            refusée
          <% else %>
            reportée
            <% end  %>
          </p>
        </div>
      </div>
      <div class="stats-column">
        <div><i class="fas fa-users"></i></div>
        <div>
          <p><% if @public_result == "accepted" %>
             <i class="fas fa-check"></i>
            <% elsif @public_result == "rejected" %>
             <i class="fas fa-times"></i>
             <% else %>
              <i class="far fa-clock"></i>
            <% end  %>
           </p>
        </div>
      </div>
      <div class="stats-column">
        <div><%= cl_image_tag current_user.photo, class: "avatar"%></div>
        <div>
          <p>
            <% if @user_vote == "accepted" %>
             <i class="fas fa-check"></i>
            <% elsif @user_vote == "rejected" %>
             <i class="fas fa-times"></i>
             <% else %>
              <i class="far fa-clock"></i>
            <% end  %>
          </p>
        </div>
      </div>
    </div>
  </div>



  <div class="col-xs-12 col-sm-6">
    <div class="chart-container">
      <h4 class="text-center">Conseil Municipal
        <i class="fas fa-landmark"></i>
      </h4>
      <p class="text-center">Cette décision a été<strong>
         <% if @decision.result == "accepted" %>
          acceptée
        <% elsif @decision.result == "rejected" %>
          refusée
        <% else %>
          reportée
          <% end  %>
        </strong>
        par le conseil municipal.</p>
    <div class="pie-chart-container-decision">
      <div class="pie-chart-legend">
        <div class="legend-all legend-environment">Accepté</div>
        <div class="legend-all legend-education">Refusé</div>
        <div class="legend-all legend-deferred">A reporter</div>
      </div>
      <div class='accepted-rejected'>
        <%= pie_chart @council_results_by_numbers, height: "250px", colors: ["#32B796", "#EE5F5B", "#C9C9C9"], legend: false, donut: true %>
      </div>
    </div>
  </div>

  </div>
    <div class="col-xs-12 col-sm-6">
      <div class="chart-container">
        <h4 class="text-center">Habitants
          <i class="fas fa-users"></i>
        </h4>
        <p class="text-center">Cette décision a été <strong><%= @public_result == "accepted" ? "acceptée" : "refusée"  %> </strong>

        par le public.</p>
        <div class="pie-chart-container-decision">
            <div class="pie-chart-legend">
              <div class="legend-all legend-environment">Accepté</div>
              <div class="legend-all legend-education">Refusé</div>
            </div>
        <div class='accepted-rejected'>
          <%= pie_chart @public_results_by_numbers, height: "250px", colors: ["#32B796", "#EE5F5B", "#C9C9C9"], legend: false, donut: true %>
        </div>
      </div>
      </div>
    </div>
  </div>
