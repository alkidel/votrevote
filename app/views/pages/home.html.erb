<%= content_for(:navbar_class, "navbar-home") %>
<div class="container">
<%= render 'shared/banner' %>

  <h2>Dernier conseils municipaux</h2>
  <div class="card-home">
    <% Decision.dates.first(3).each do |array| %>
    <%= link_to former_path(council_date: array) do %>
        <div class="card-home-display">
          <div class="card-product">
            <%= image_tag "Vote_banner.jpg" %>
            <div class="card-product-infos">
              <h2>Conseil municipal du <br> <%= array.strftime("%d %B %Y") %></h2>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
  </div>

</div>
