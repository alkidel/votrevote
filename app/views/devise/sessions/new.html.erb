<div class="container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="form-card">

        <h3 class="text-center">Se connecter</h3>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          label: "E-mail",
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          label: "Mot de passe",
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, label: "Rester connectÃ©", as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Connexion", class: "btn-form" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
